import React, { useState } from 'react'

const App = () => {

  const [time,setTime] = useState(new Date());

  setTimeout(() => {
    let nowTime = new Date();
    setTime(nowTime);
  }, 1000);

  return (
    <div>
      <h1>Current time in India</h1>
      <h3>{time.toLocaleDateString()}</h3>
      <h3>{time.toLocaleTimeString()}</h3>
    </div>
  )
}

export default App
